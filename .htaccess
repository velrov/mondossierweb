RewriteEngine On

# Redirect index.html to /login
RewriteRule ^index\.html$ /login [R=301,L]
RewriteRule ^$ /login [R=301,L]

# Handle clean URLs
RewriteRule ^etat-civil$ !etatCivilView.html [L]
RewriteRule ^informations-annuelles$ !informationsAnnuellesView.html [L]
RewriteRule ^adresses$ !adressesView.html [L]
RewriteRule ^inscriptions$ !inscriptionsView.html [L]
RewriteRule ^calendrier-epreuves$ !calendrierEpreuvesView.html [L]
RewriteRule ^notes$ !notesView.html [L]
RewriteRule ^logout$ logout.html [L]
RewriteRule ^login$ index.html [L]

# Remove .html extension
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.+)$ $1.html [L]